<div class="container py-5">
  <div class="row">
    <div class="col-12 col-lg-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3 class="mb-3">Edit Review for <%= @recommendation.name %></h3>
        <%= simple_form_for @review do |f| %>
          <%= f.input :text, as: :text, label: 'Review', input_html: { class: 'form-control' } %>
          <%= f.input :rating, as: :select, collection: (1..5), required: true, label: "Rating", input_html: { data: { controller: "star-rating" } } %>
          <%= f.input :visit_date, as: :string, label: 'Visit Date', input_html: { data: { controller: "datepicker" } } %>
          <%= f.submit "Update", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
